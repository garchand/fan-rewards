<div class="card-new-event">
  <h1>Create new campaign</h1>
  <%= simple_form_for [restaurant, campaign],
                      html: { class: 'main-card-form', data: {controller:'flatpickr'}
                      } do |f| %>
    <h2>Type de campagne</h2>
    <%= f.input :description, style:"width:100%", placeholder: "campagne de recommandation", label: false %>
    <h2>Nouveau client</h2>
    <%= f.input :client_benefit, style:"width:100%", placeholder: "nouveau client", label: false %>
  <div class="duo-grid">
    <div class="duo-grid-element" >
      <h2>Ambassadeur</h2>
      <%= f.input :ambassador_reward, placeholder: "nouveau client", label: false %>
    </div>
    <div class="duo-grid-element" >
      <h2>Condition validation</h2>
      <%= f.input :reward_threshold, placeholder: "nouveau client", label: false %>
    </div>
  </div>

  <div class="duo-grid">
    <div class="duo-grid-element" >
      <h2>Date de fin</h2>
      <%= f.input :start_date,
                  as: :string,
                  label: false,
                  input_html: {
                  class: "main-card-input",
                  data: {
                  flatpickr_target: 'startDateInput',
                  action: "flatpickr#start"
      } } %>
    </div>
    <div class="duo-grid-element" >
      <h2>Date de fin</h2>
      <%= f.input :end_date,
                  label: false,
                  as: :string,
                  input_html: {
                  class: "main-card-input",
                  data: {
                  flatpickr_target: 'endDateInput',
                  id: 'haha'
                  }
      } %>
    </div>
  </div>

  <h2>Photo</h2>
  <div class="photo">
    <div class="plus">+</div>
  </div>
  <%= f.submit "CrÃ©er une nouvelle campagne", class:"card-event-user text-white btn bg-dark mt-4 border-radius-1 w-100" %>
  <% end %>
</div>
