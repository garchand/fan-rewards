<% if @restaurant.user == current_user %>
  <div class="d-flex justify-content-center">
    <%= render 'shared/campaign_card_owner', restaurant: @restaurant %>
    <%= render 'shared/campaign_create_card', restaurant: @restaurant %>
  </div>
<% else %>
  <div class="d-flex flex-column">
    <%= render 'shared/campaign_card_ambassador', restaurant: @restaurant %>
  </div>
<% end %>
